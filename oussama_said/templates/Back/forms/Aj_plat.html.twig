{% extends 'Back/base.html.twig' %}

 {% block title %} <title>Formulaire Plats</title> {% endblock %}
{% block body %}



    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">

                <div class="col-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Ajouter un Plat</h4>
                            <p class="card-description">

                            </p>

                            {{ form_start(f, {'attr':{'novalidate':'novalidate'}}) }}

                            <div class="form-group">
                                <label for="exampleInputName1">Nom Restaurant</label>
                                {{ form_widget(f.restoId,{'attr':{'class':'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">{{ form_label(f.nom) }}</label>
                                {{ form_widget(f.nom,{'attr':{'class':'form-control'}}) }}
                                {{ form_errors(f.nom) }}
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">{{ form_label(f.composition) }}</label>
                                {{ form_widget(f.composition,{'attr':{'class':'form-control'}}) }}
                                {{ form_errors(f.composition) }}
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">{{ form_label(f.prix) }}</label>
                                {{ form_widget(f.prix,{'attr':{'class':'form-control'}}) }}
                                {{ form_errors(f.prix) }}
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">{{ form_label(f.type) }}</label>
                                {{ form_widget(f.type,{'attr':{'class':'form-control'}}) }}
                                {{ form_errors(f.type) }}
                            </div>
                            <div class="form-group">
                                <label>File upload</label>
                                <label for="exampleInputName1">{{ form_label(f.photo) }}</label>

                                <div class="input-group col-xs-12">
                                    {{ form_widget(f.photo,{'attr':{'class':'form-control'}}) }}
                                    {{ form_errors(f.photo) }}

                                </div>
                            </div>






                            {{ form_widget(f.Valider, {'attr':{'class':'btn btn-primary mr-2'}} ) }}

                            <a class="btn btn-light"  href="platsAdmin" >Cancel</a>




                            {{ form_end(f) }}
                        </div>
                    </div>
                </div>









            </div>
        </div>
